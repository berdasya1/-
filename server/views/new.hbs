<form class="form" action="/blog" method="post">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" placeholder="Enter a blog" name="title">
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <textarea type="text" class="form-control" id="description" placeholder="Enter a description" name="description">
    </textarea>
  </div>
  <div class="form-group">
    <label for="author">Author</label>
        <textarea type="text" class="form-control" id="author" placeholder="Enter a author" name="author">
    </textarea>
  </div>
  <button type="submit" class="btn btn-default btn-success">
    Create
  </button>
</form>

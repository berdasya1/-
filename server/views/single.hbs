<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">{{title}} <span class="badge">{{author}}</span></h3>
  </div>
  <div class="panel-body">
    {{description}}
  </div>
  <div class="panel-footer">{{date}}</div>
</div>
<form action="/blog/{{id}}?_method=DELETE" method="post">
  <a href="/blog/{{id}}/edit" type="button" class="btn btn-default btn-warning">
    Edit post
  </a>
  <button type="submit" class="btn btn-default btn-danger">
    Delete post
  </button>
</form>
